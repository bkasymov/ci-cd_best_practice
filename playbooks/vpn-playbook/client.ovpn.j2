client
dev tun
proto udp
remote {{ ansible_host }} 1194
resolv-retry infinite
nobind
persist-key
persist-tun
remote-cert-tls server
cipher AES-256-CBC
auth SHA256
verb 3
<ca>
{{ lookup('file', '/etc/openvpn/easy-rsa/pki/ca.crt') }}
</ca>
<cert>
{{ lookup('file', '/etc/openvpn/easy-rsa/pki/issued/' + user.name + '.crt') }}
</cert>
<key>
{{ lookup('file', '/etc/openvpn/easy-rsa/pki/private/' + user.name + '.key') }}
</key>
